{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "/workspace/ECON/apps/infer.py",  // Path to your Python script
            "console": "integratedTerminal",
            "args": [
                "-cfg", "./configs/econ.yaml",
                "-in_dir", "./examples",
                "-out_dir", "./results"
            ],
            "pythonPath": "/workspace/miniforge3/envs/econ/bin/python",  // Path to econ's Python interpreter
            "env": {
                "PYTHONPATH": "/workspace/ECON"  // Ensure the workspace root is in the Python path
            }
        }
    ]
}
